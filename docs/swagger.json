                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/InternalServerErrorResponse"
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/transactions": {
            "post": {
                "summary": "Create a new transaction for the authenticated user",
                "tags": ["Transaction"],
                "parameters": [
                    {
                        "name": "body",
