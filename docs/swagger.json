        "Transaction": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "57b39a27-f0fe-456f-999b-750db4a37b15"
                },
                "user_id": {
                    "type": "string",
                    "example": "57b39a27-f0fe-456f-999b-750db4a37b15"
                },
                "name": {
                    "type": "string",
                    "example": "Trabalho"
                },
                "date": {
                    "type": "string",
                    "example": "2025-03-05T00:00:00.000Z"
                },
                "amount": {
                    "type": "string",
                    "example": "1000"
                },
                "type": {
                    "type": "string",
                    "example": "EARNING"
                }
            }
        },
        "CreateTransactionParams": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "Trabalho",
                    "required": true
                },
                "date": {
                    "type": "string",
                    "example": "2025-03-05T00:00:00.000Z",
                    "required": true
                },
                "amount": {
                    "type": "number",
                    "example": 1000,
                    "required": true
                },
                "type": {
                    "type": "string",
                    "example": "EARNING",
                    "description": "EARNING, EXPENSE or INVESTMENT",
                    "required": true
                }
            }
        },
        "UserBalance": {
            "type": "object",
            "properties": {
                "ganhos": {
                    "type": "string",
                    "example": "1000"
