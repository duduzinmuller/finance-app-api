                },
                "despesas": {
                    "type": "string",
                    "example": "500"
                },
                "investimentos": {
                    "type": "string",
                    "example": "200"
                },
                "total": {
                    "type": "string",
                    "example": "300"
                }
            }
        },
        "UserNotFoundResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Usuario n√£o encontrado."
                }
            }
        },
        "InternalServerErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Erro interno no servidor."
                }
            }
        },
        "InvalidParamsResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Parametro invalido (este depende do parametro invalido)"
                }
            }
        }
    }
}
